<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.FragmentPassword"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ImgPass"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/bitnext2"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edPass"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ImgPass"
            android:hint="CurrentPassword"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/shape"/>
        <EditText
            android:id="@+id/edPassNew"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edPass"
            android:hint="New Password"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/shape"/>

        <EditText
            android:id="@+id/edPassNewConfirm"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edPassNew"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:layout_marginTop="30dp"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edPassNewConfirm"
            android:text="Change"
            android:layout_marginTop="30dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>
    </RelativeLayout>

</ScrollView>
